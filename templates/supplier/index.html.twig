{% extends 'base.html.twig' %}

{% block title %}Hello TodoController!{% endblock %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>id</th>
                <th>count</th>
                <th>date</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for supplier in suppliers %}
                <tr>
                    <th scope="row">{{ supplier.id }}</th>
                    <td>{{ supplier.Count }}</td>
                    <td>{{ supplier.date|date('F j,Y, g:i a') }}</td>
                    <td>
                        <a href="{{ path('app_supplier_details', {'id': supplier.id}) }} " class='btn btn-success'>View</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
